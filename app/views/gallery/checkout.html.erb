<%= notice %>
Total amount : <%= session[:amount] %>
<%= form_with do |f| %>
   <div class="row">
 <div class="col-md-6">
 <div class="form-group">
   <%= f.label :first_name %>
   <div class="form">
    <%= f.text_field :first_name %>
 </div></div></div></div>

   <div class="row">
 <div class="col-md-6">
 <div class="form-group">
   <%= f.label :last_name %>
   <div class="form">
    <%= f.text_field :last_name %>
 </div></div></div></div>

   <div class="row">
 <div class="col-md-6">
 <div class="form-group">
   <%= f.label :credit_card_no %>
   <div class="form">
    <%= f.text_field :credit_no %>
  </div></div></div></div>

  <div class="row">
 <div class="col-md-6">
 <div class="form-group">
    <%= f.label :date_of_expiry %>
    	<select name="month" id="check_out_month">
		<option selected value="01">Janurary 
		<option  value="02">Feburary
		<option  value="03">March
		<option  value="04">April 
		<option  value="05">May 
		<option  value="06">June 
		<option  value="07">July 
		<option  value="08">August 
		<option  value="09">September 
		<option  value="10">October 
		<option  value="11">November 
		<option  value="12">December 
		</select>
		<select name="year" id="check_out_year">
		<option selected value="2021">2021
		<option  value="2022">2022
		<option  value="2023">2023
		<option  value="2024">2024
		<option  value="2025">2025
	</select>
  </div></div></div>

   <div class="row">
 <div class="col-md-6">
 <div class="form-group">
   <%= f.label :payment_type %> 
    <select name="payment_type"><option value="visa">Visa</option></option><option value="mastercard">Master Card</option></select>
    </div></div></div>

  <div class="row">
 <div class="col-md-6">
 <div class="form-group">
    <%= f.label :verification_number %>
    <div class="form">   
    <%= f.text_field :verification_number, :size => 2 %>
  </div></div></div></div>
  <br/>

   <div class="btn btn-info btn-lg">               
<div class="actions">
    <%= f.submit "PAY", class:"p-0 pb-0 pt-1 pr-3 pl-3" %>
  </div></div>
  <% end %>