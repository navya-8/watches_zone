<h2>ADMIN LOGIN </h2>
<!-- <h4><%= flash[:notice] %></h4> -->
<%= form_with do |form| %>
<div class="row">
 <div class="col-md-6">
 <div class="form-group">
   	<%= form.label :name %>
   	<div class="form">
	<%= form.text_field :name %>
</div></div></div></div>

<div class="row">
 <div class="col-md-6">
 <div class="form-group">
   	<%= form.label :password %>
   	<div class="form">
	<%= form.password_field :password %>
</div></div></div></div>

 <div class="btn btn-info btn-sm">               
<div class="actions">
	<%= form.submit "ADMIN LOGIN", class:"pt-1 pb-0 mb-0" %>
</div></div>
<% end %>